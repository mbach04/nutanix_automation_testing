#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
    log         127.0.0.1 local2

    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon

    # turn on stats unix socket
    stats socket /var/lib/haproxy/stats

listen stats :9000
    mode http
    stats enable
    stats uri /

#---------------------------------------------------------------------
# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
    mode                    http
    log                     global
#   option                  httplog
    option                  dontlognull
    option http-server-close
#   option forwardfor       except 127.0.0.0/8
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000


frontend infranode-frontend-80 *:80
    mode tcp
    option tcplog
    default_backend infranode-80
    
frontend infranode-frontend-443 *:443
    mode tcp
    option tcplog
    default_backend infranode-443    

backend infranode-80
    balance roundrobin
    mode tcp
    option httpchk GET /healthz
    http-check expect status 200
{% for server in groups['nodes'] %}
{% if hostvars[server].openshift_node_labels is defined %}
{% if (hostvars[server].openshift_node_labels | intersect([hostvars[server].openshift_hosted_router_selector])) %}
    server  {{ hostvars[server].ansible_nodename }} {{ hostvars[server].ansible_default_ipv4.address }}:80 check ssl verify none   
{% endif %}
{% endif %}
{% endfor %}

backend infranode-443
    balance roundrobin
    mode tcp
    option httpchk GET /healthz
    http-check expect status 200
{% for server in groups['nodes'] %}
{% if hostvars[server].openshift_node_labels is defined %}
{% if (hostvars[server].openshift_node_labels | intersect([hostvars[server].openshift_hosted_router_selector])) %}
    server  {{ hostvars[server].ansible_nodename }} {{ hostvars[server].ansible_default_ipv4.address }}:443 check ssl verify none
{% endif %}
{% endif %}       
{% endfor %}